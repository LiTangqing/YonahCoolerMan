<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sg.yonah.coolerman20.MainActivity">

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:id="@+id/time0"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/time0"
        android:layout_toEndOf="@+id/time0"
        android:layout_marginStart="65dp"
        android:id="@+id/displayTime" />

    <TextView
        android:text="Geo Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time0"
        android:layout_alignStart="@+id/time0"
        android:layout_marginTop="18dp"
        android:id="@+id/geo0"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/geo0"
        android:layout_toEndOf="@+id/displayTime"
        android:layout_marginStart="10dp"
        android:id="@+id/displayLocation" />

    <TextView
        android:text="Client Msg:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/clientMessage0"
        android:layout_below="@+id/geo0"
        android:layout_alignStart="@+id/geo0"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clientMessage0"
        android:layout_alignStart="@+id/displayTime"
        android:id="@+id/tvClientMessage" />

    <TextView
        android:text="Server Socket Port:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clientMessage0"
        android:layout_alignStart="@+id/clientMessage0"
        android:layout_marginTop="15dp"
        android:id="@+id/serverSocketPort0"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/serverSocketPort0"
        android:layout_centerHorizontal="true"
        android:id="@+id/serverSocketPort" />
</RelativeLayout>
